{
  "name": "zc_main",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:zurichat/zc_main.git",
  "license": "MIT",
  "scripts": {
    "start": "npm run run-start",
    "build": "npm run frontend:build",
    "cypress": "cross-env NODE_ENV=test start cypress open",
    "dev": "concurrently --kill-others-on-fail \"npm run run-dev\" \"npm run frontend:dev\"",
    "format": "prettier -w .",
    "lint": "prettier -c .",
    "run-start": "cross-env NODE_ENV=production node server.js",
    "run-dev": "cross-env NODE_ENV=development nodemon server.js",
    "frontend:build": "npm run build --prefix zc_frontend",
    "frontend:dev": "cross-env PORT=5000 npm start --prefix zc_frontend",
    "frontend:test": "cross-env NODE_ENV=test CI=true npm test --prefix zc_frontend",
    "postinstall": "cd zc_frontend && yarpm-yarn install",
    "test": "jest --verbose ./__tests__"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "nodemailer": "^6.6.3"
  },
  "devDependencies": {
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "cypress": "^8.3.1",
    "jest": "26.6.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "yarpm": "^1.1.1"
  }
}
